document.getElementById('duelButton').addEventListener('click', function() {
    // Get player stats from input fields
    const player1Health = parseFloat(document.getElementById('player1Health').value);
    const player1Armor = parseFloat(document.getElementById('player1Armor').value);
    const player1DPS = parseFloat(document.getElementById('player1DPS').value);
    
    const player2Health = parseFloat(document.getElementById('player2Health').value);
    const player2Armor = parseFloat(document.getElementById('player2Armor').value);
    const player2DPS = parseFloat(document.getElementById('player2DPS').value);
    
    // Check for missing fields
    if (isNaN(player1Health) || isNaN(player1Armor) || isNaN(player1DPS) ||
        isNaN(player2Health) || isNaN(player2Armor) || isNaN(player2DPS)) {
        alert("Please fill out all fields before continuing.");
        return;
    }
    
    // Calculate time to defeat each player
    const timeToDefeatPlayer1 = (player1Armor / (player2DPS / 2)) + (Math.max(0, player1Health - player1Armor) / player2DPS);
    const timeToDefeatPlayer2 = (player2Armor / (player1DPS / 2)) + (Math.max(0, player2Health - player2Armor) / player1DPS);
    
    // Determine the outcome
    if (Math.abs(timeToDefeatPlayer1 - timeToDefeatPlayer2) < 0.1) {
        alert("It should be a draw!");
    } else if (timeToDefeatPlayer1 < timeToDefeatPlayer2) {
        alert(`Player 1 will win in ${timeToDefeatPlayer1.toFixed(1)} seconds!`);
    } else {
        alert(`Player 2 will win in ${timeToDefeatPlayer2.toFixed(1)} seconds!`);
    }
});
